{
    "name": "monsieurbiz/sylius-alert-message-plugin",
    "type": "sylius-plugin",
    "keywords": ["sylius", "sylius-plugin", "alert", "monsieurbiz"],
    "description": "Adds a simple message on top of your shop.",
    "license": "MIT",
    "require": {
        "php": "~7.4 || ^8.0",
        "sylius/sylius": "^1.8",
        "gedmo/doctrine-extensions": "^2.4.12 || ^3.0"
    },
    "require-dev": {
        "behat/behat": "^3.6.1",
        "behat/mink-selenium2-driver": "^1.4",
        "friends-of-behat/mink": "^1.8",
        "friends-of-behat/mink-browserkit-driver": "^1.4",
        "friends-of-behat/mink-extension": "^2.4",
        "friends-of-behat/page-object-extension": "^0.3",
        "friends-of-behat/suite-settings-extension": "^1.0",
        "friends-of-behat/symfony-extension": "^2.0",
        "friends-of-behat/variadic-extension": "^1.1",
        "lchrusciel/api-test-case": "^3.0 || ^5.0",
        "phpspec/phpspec": "^7.0",
        "phpstan/phpstan-doctrine": "0.12.33",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-webmozart-assert": "^0.12.7",
        "phpunit/phpunit": "^8.5",
        "sensiolabs/security-checker": "^6.0",
        "sylius-labs/coding-standard": "^4.0",
        "symfony/browser-kit": "^4.4 || ^5.2",
        "symfony/debug-bundle": "^4.4 || ^5.2",
        "symfony/dotenv": "^4.4 || ^5.2",
        "symfony/intl": "^4.4 || ^5.2",
        "symfony/web-profiler-bundle": "^4.4 || ^5.2",
        "symfony/web-server-bundle": "^4.4 || ^5.2"
    },
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "MonsieurBiz\\SyliusAlertMessagePlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": ["tests/Application/src/Kernel.php"],
        "psr-4": {
            "App\\": "tests/Application/src/"
        }
    },
    "extra": {
        "symfony": {
            "require": "^4.4"
        },
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
